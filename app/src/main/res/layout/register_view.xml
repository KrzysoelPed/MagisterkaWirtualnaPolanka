<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#9FA66F">

    <include
        android:id="@id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/CardLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="110dp"
            app:cardCornerRadius="40dp"
            android:layout_centerHorizontal="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/logo_app" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:text="PANEL REJESTRACJI"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            android:typeface="normal"></TextView>


        <EditText
            android:id="@+id/register_name"
            android:layout_width="550dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="240dp"
            android:background="@drawable/edit_text_view"
            android:drawableStart="@drawable/ic_baseline_person_add_24"
            android:hint="  Imię"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:shadowColor="@color/white"
            android:textColor="@color/black"
            android:textColorLink="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"></EditText>
        <EditText
            android:id="@+id/register_surname"
            android:layout_centerHorizontal="true"
            android:layout_width="550dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="290dp"
            android:background="@drawable/edit_text_view"
            android:drawableStart="@drawable/ic_baseline_person_add_24"
            android:hint="  Nazwisko"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:shadowColor="@color/white"
            android:textColor="@color/black"
            android:textColorLink="@color/white"
            android:textSize="18dp"
            android:textStyle="bold">
        </EditText>
        <Spinner
            android:id="@+id/register_spinner"
            android:layout_width="550dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="340dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_text_view"
            android:textAlignment="center"
            android:focusedByDefault="true"
            android:textSize="25dp"
            android:textStyle="bold">

        </Spinner>

        <EditText
            android:id="@+id/register_mail"
            android:layout_centerHorizontal="true"
            android:layout_width="550dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="390dp"
            android:background="@drawable/edit_text_view"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:hint="  Wprowadź adres e-mail"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:shadowColor="@color/white"
            android:textColor="@color/black"
            android:textColorLink="@color/white"
            android:textSize="18dp"
            android:textStyle="bold">
        </EditText>


        <EditText
            android:id="@+id/register_password"
            android:layout_centerHorizontal="true"
            android:layout_width="550dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="440dp"
            android:background="@drawable/edit_text_view"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:hint="  Wprowadź hasło"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:shadowColor="@color/white"
            android:textColor="@color/black"
            android:textColorLink="@color/white"
            android:textSize="18dp"
            android:textStyle="bold">
        </EditText>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/go_to_register"
            android:layout_width="550dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/button_view"
            android:text="ZAREJESTRUJ SIĘ"
            android:textSize="18dp"
            android:textColor="@color/white">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_button"
            android:layout_width="550dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="550dp"
            android:background="@drawable/button_view"
            android:text="ZALOGUJ SIĘ"
            android:textSize="18dp"
            android:textColor="@color/white">
        </androidx.appcompat.widget.AppCompatButton>




    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>