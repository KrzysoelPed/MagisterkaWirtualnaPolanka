<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FA66F"
    tools:context=".MainActivity">

<include layout="@layout/toolbar"
    android:id="@+id/toolbar"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/CardLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="90dp"
            app:cardCornerRadius="100dp"
            android:layout_centerHorizontal="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/Logo_Aplikacji"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/wirtualna"
                />

        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/wybor_pietra"
            android:layout_width="350dp"
            android:layout_height="110dp"
            android:layout_below="@+id/CardLogo"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/wybor_pietra" />

        <ImageButton
            android:id="@+id/panel_logowania"
            android:layout_width="350dp"
            android:layout_height="110dp"
            android:layout_below="@+id/wybor_pietra"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/panel_logowania" />


        <ImageButton
            android:id="@+id/panel_rejestracji"
            android:layout_width="350dp"
            android:layout_height="110dp"
            android:layout_below="@+id/panel_logowania"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/panel_rejestracji" />


    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>