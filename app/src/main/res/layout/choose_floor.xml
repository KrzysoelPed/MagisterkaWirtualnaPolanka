        <ImageButton
            android:id="@+id/ground"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_below="@+id/search"
            android:layout_centerInParent="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/poziom_0" />

        <ImageButton
            android:id="@+id/floor1"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_below="@+id/ground"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/poziom_1" />

        <ImageButton
            android:id="@+id/floor2"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_below="@+id/floor1"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/poziom_2" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>