<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/green_study"
    tools:context="Choose_Floor">

<include layout="@layout/toolbar" android:id="@id/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_label"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginBottom="30dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:background="@color/white"
            android:text="WYSZUKIWARKA Z BAZY DANYCH"
            android:textColor="@color/black">


        </TextView>

        <ImageButton
            android:layout_below="@id/text_label"
            android:id="@+id/ground"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/poziom_0"
            />

        <ImageButton
            android:id="@+id/floor1"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_below="@+id/ground"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/poziom_1" />

        <ImageButton
            android:id="@+id/floor2"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_below="@+id/floor1"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/poziom_2" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>